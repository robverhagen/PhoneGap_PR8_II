<?xml version="1.0" encoding="UTF-8" ?>
<widget xmlns   = "http://www.w3.org/ns/widgets"
    xmlns:gap   = "http://phonegap.com/ns/1.0"
    id          = "com.phonegap.PR8mobiletryout"
    versionCode = "10"
    version     = "1.0.0" >

<!-- versionCode is optional and Android only -->

  <name>PR8 PhoneGap-Build tryout II</name>
  <description>
      2nd PR8 example for phonegap build config.xml file in combination with bootstrap.
  </description>
  <author href="https://nhtv.nl" email="verhagen.r@nhtv.nl">
      Rob Verhagen 
  </author>
      
  <!-- nps is the repository -->
  <!-- <plugin name="cordova-inappbrowser" source="npm"> -->
  <plugin name="cordova-plugin-admob" spec="3.2.4" />
  <gap:plugin name="cordova-plugin-admob" source="npm" />
  
   <!-- preference list all platforms -->
  
   <preference name="phonegap-version" value="cli-6.5.0" />
   
   <preference name="android-build-tool" value="gradle" /> 

   <preference name="permissions" value="none" />
   <preference name="orientation" value="default" />
   <preference name="target-device" value="universal" />
   <!-- all: hides the status bar at the top of the screen - may set to "true" -->
   <preference name="fullscreen" value="false" />
   <preference name="KeepRunning" value="false" />

  <!-- iOS only 
  <preference name="target-device" value="universal" />
  <preference name="prerendered-icon" value="true" />
  <preference name="detect-data-types" value="true" />
  <preference name="exit-on-suspend" value="true" />
  <preference name="deployment-target" value="7.0" />
  -->

  <!-- Android only -->
  <preference name="android-minSdkVersion" value="14" />
  <preference name="android-maxSdkVersion" value="15" />
  <preference name="android-targetSdkVersion" value="12" />
  <preference name="android-installLocation" value="auto" />
  <preference name="android-windowSoftInputMode" value="stateVisible|adjustResize" />
  
  
   <!-- Define app splash screen for each platform. -->
<gap:splash src="res/screen/android/screen-ldpi-portrait.png" gap:qualifier="port-ldpi" gap:platform="android"/>
<gap:splash src="res/screen/android/screen-mdpi-portrait.png" gap:qualifier="port-mdpi" gap:platform="android"/>
<gap:splash src="res/screen/android/screen-hdpi-portrait.png" gap:qualifier="port-hdpi" gap:platform="android"/>
<gap:splash src="res/screen/android/screen-xhdpi-portrait.png" gap:qualifier="port-xhdpi" gap:platform="android"/>

		<platform name="android">
		<icon src="res\icon\android\mipmap-ldpi\ic_launcher.png" qualifier="ldpi" />
		<icon src="res\icon\android\mipmap-mdpi\ic_launcher.png" qualifier="mdpi" />
		<icon src="res\icon\android\mipmap-hdpi\ic_launcher.png" qualifier="hdpi" />
		<icon src="res\icon\android\mipmap-xhdpi\ic_launcher.png" qualifier="xhdpi" />
		<icon src="res\icon\android\mipmap-xxhdpi\ic_launcher.png" qualifier="xxhdpi" />
		<icon src="res\icon\android\mipmap-xxxhdpi\ic_launcher.png" qualifier="xxxhdpi" />
		
		<splash src="res\screen\android\screen-ldpi-portrait.png" qualifier="ldpi" />
